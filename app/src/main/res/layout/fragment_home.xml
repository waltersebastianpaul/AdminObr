<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título entre grupos de botones -->
            <TextView
                android:id="@+id/secondTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:gravity="start"
                android:text="Gestión de Equipos - PARTES"
                android:textSize="16sp"
                android:textStyle="normal" />

            <!-- FlexboxLayout en lugar de GridLayout -->
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                app:flexWrap="wrap"
                app:justifyContent="space_between">

                <!-- Primer CardView en la cuadrícula -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/parteDiarioCardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:layout_flexBasisPercent="47%">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="0dp">

                        <!-- Barra superior -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@color/gray_800" />

                        <!-- Contenido de la Card -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBlueLite"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="16dp"
                                android:src="@drawable/ic_assignment"
                                app:tint="@color/colorButtonPrimary" />

                            <!-- Menú de tres puntos -->
                            <ImageView
                                android:id="@+id/parteDiarioMenuIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:visibility="gone"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:src="@drawable/ic_more_vert" />

                        </RelativeLayout>

                        <!-- Descripción u otro contenido -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:text="Parte Diario"
                            android:textColor="@color/gray_900"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Segundo CardView en la cuadrícula -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/listarPartesCardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:layout_flexBasisPercent="47%">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!-- Barra superior -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@color/gray_800" />

                        <!-- Contenido de la Card -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBlueLite"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="16dp"
                                android:src="@drawable/ic_subject"
                                app:tint="@color/colorButtonPrimary" />

                            <!-- Menú de tres puntos -->
                            <ImageView
                                android:id="@+id/listarPartesMenuIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:visibility="gone"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:src="@drawable/ic_more_vert" />
                        </RelativeLayout>

                        <!-- Descripción u otro contenido -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:text="Listar Partes"
                            android:textColor="@color/gray_900"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tercer CardView en la cuadrícula -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/parteSimpleCardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:visibility="gone"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:layout_flexBasisPercent="47%">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!-- Barra superior -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@color/gray_800" />

                        <!-- Contenido de la Card -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBlueLite"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="16dp"
                                android:src="@drawable/ic_content_paste"
                                app:tint="@color/colorButtonPrimary" />

                            <!-- Menú de tres puntos -->
                            <ImageView
                                android:id="@+id/parteSimpleMenuIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:visibility="gone"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:src="@drawable/ic_more_vert" />
                        </RelativeLayout>

                        <!-- Descripción u otro contenido -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:text="Listar Partes"
                            android:textColor="@color/gray_900"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Cuarto CardView en la cuadrícula -->


            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
